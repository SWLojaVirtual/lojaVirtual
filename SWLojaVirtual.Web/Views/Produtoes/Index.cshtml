@model IEnumerable<SWLojaVirtual.Dominio.Entidades.Produto>

@{
    ViewBag.Title = "Página Inicial";
}
<br />

<p>
    <a class="btn btn-primary" href="Produtoes/Create">Novo Produto</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayName("Preço")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdProduto }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Detalhes", "Details", new { id=item.IdProduto }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Excluir", "Delete", new { id=item.IdProduto }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
